function tc_parameter = tcParameter(parameter)
    bitmask = 0;
    rng(0); % random seed
    switch parameter
        case 'obc'
            bitmask = [0 dec2bin(1,8);
        case 'eps'
            bitmask = dec2bin(2,8);
        case 'aocs'
            bitmask = dec2bin(4,8);
        case 'payload'
            bitmask = dec2bin(8,8);
        case 'beacon'
            bitmask = dec2bin(0,8);
        case 'padding'
            bitmask  = randi([32,255],1,2);
    end
    tc_parameter = bitmask;
end